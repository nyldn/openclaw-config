{
  "mcpServers": {
    "google-drive": {
      "command": "node",
      "args": ["/app/mcp-servers/google-drive-mcp.js"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/app/data/mcp/google-drive-credentials.json"
      }
    },
    "dropbox": {
      "command": "node",
      "args": ["/app/mcp-servers/dropbox-mcp.js"],
      "env": {
        "DROPBOX_ACCESS_TOKEN": "${DROPBOX_ACCESS_TOKEN}"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/app/data/workspace",
        "/app/data/projects"
      ]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${SUPABASE_DB_URL}"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "figma": {
      "command": "npx",
      "args": [
        "-y",
        "@figma/mcp-server-figma"
      ],
      "env": {
        "FIGMA_PERSONAL_ACCESS_TOKEN": "${FIGMA_PAT}",
        "FIGMA_FILE_KEY": "${FIGMA_FILE_KEY}"
      }
    },
    "stripe": {
      "command": "npx",
      "args": [
        "-y",
        "@stripe/mcp-server"
      ],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      }
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "${SENTRY_ORG}",
        "SENTRY_PROJECT": "${SENTRY_PROJECT}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "google-calendar": {
      "command": "node",
      "args": ["/app/mcp-servers/google-calendar-mcp.js"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/app/data/mcp/google-calendar-credentials.json"
      }
    },
    "email": {
      "command": "node",
      "args": ["/app/mcp-servers/email-mcp.js"],
      "env": {
        "EMAIL_IMAP_HOST": "${EMAIL_IMAP_HOST}",
        "EMAIL_IMAP_PORT": "${EMAIL_IMAP_PORT}",
        "EMAIL_SMTP_HOST": "${EMAIL_SMTP_HOST}",
        "EMAIL_SMTP_PORT": "${EMAIL_SMTP_PORT}",
        "EMAIL_USERNAME": "${EMAIL_USERNAME}",
        "EMAIL_PASSWORD": "${EMAIL_PASSWORD}"
      }
    },
    "todoist": {
      "command": "node",
      "args": ["/app/mcp-servers/todoist-mcp.js"],
      "env": {
        "TODOIST_API_TOKEN": "${TODOIST_API_TOKEN}"
      }
    },
    "slack": {
      "command": "node",
      "args": ["/app/mcp-servers/slack-mcp.js"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_APP_TOKEN": "${SLACK_APP_TOKEN}"
      }
    },
    "veritas-kanban": {
      "command": "node",
      "args": ["$HOME/.local/share/veritas-kanban/mcp/dist/index.js"],
      "env": {
        "VK_API_URL": "http://localhost:3001",
        "VK_API_KEY": "${VERITAS_ADMIN_KEY}"
      }
    }
  }
}
